page{
    height: 100%;
    background: #F7F0E8;
}
scroll-view{
    width: 100%;
}
.safety{
    width: 100%;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    font-size: 26rpx;
    color: #989086;
}
.project{
    width: 100%;
    height: 280rpx;
    background: #fff;
    margin-bottom: 20rpx;
}
.header{
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    padding-left: 20rpx;
    border-bottom: 1rpx solid #DBD6CE;
}
.header text:nth-child(1){
    font-size: 26rpx;
    color: #67645F;
    font-weight: 600;
}
.header text:nth-child(2){
    font-size: 24rpx;
    border:2rpx solid #0EB10D;
    color: #0EB10D;
    margin-left: 20rpx;
}
.header text:nth-child(3){
    font-size: 26rpx;
    color: #989086;
    display: block;
    float: right;
    margin-right: 50rpx;
}
.con{
    line-height: 210rpx;
    position: relative;
}
.con text:nth-child(1){
    display: block;
    float: left;
    margin-left: 20rpx;
    font-size: 48rpx;
    color: #EE1919;
}
.con text:nth-child(2){
    display: block;
    width: 200rpx;
    position: absolute;
    left:0;
    right:0;
    margin:0 auto;
    font-size: 32rpx;
}
.con text:nth-child(3){
    display: block;
    float: right;
    margin-right: 30rpx;
    margin-top: 74rpx;
    font-size: 30rpx;
    width: 180rpx;
    height: 60rpx;
    background: #EE1919;
    color: #fff;
    text-align: center;
    line-height: 60rpx; 
}
#footer{
    width: 100%;
    height: 100rpx;
    text-align: center;
    font-size: 26rpx;
    color: #BFB9B2;
    line-height: 100rpx;
}
