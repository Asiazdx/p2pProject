page{
    height: 100%;
    background: #F7F0E8;
}
#mainContainer{
    position: absolute;
    bottom: 100rpx;
    top: 0rpx;
    width: 100%;
    height: 100%;
}
::-webkit-scrollbar{
    width:0;
    height: 0;
    color: transparent;
}
.lunbo{
    width: 100%;
    height: 400rpx;
}
.lunbo swiper-item{
    width: 100%;
    height: 100%;
}
.lunbo swiper-item image{
    width: 100%;
    height: 400rpx;
    margin: 0 auto;
}
.category{
    width: 95%;
    height: 320rpx;
    position: absolute;
    background: #fff;
    z-index: 999;
    top:390rpx;
    left: 0;
    right: 0;
    margin:auto;
    box-shadow:2rpx 5rpx 30rpx #9f9f9f;
}
.cat{
    width:50%;
    height: 50%;
    float: left;
    box-sizing: border-box;
    padding: 14rpx;
}
.cat01{
    border-right: 1rpx solid #9f9f9f;
    border-bottom: 1rpx solid #9f9f9f;
}
.cat02{
    border-bottom: 1rpx solid #9f9f9f;
}
.cat03{
    border-right: 1rpx solid #9f9f9f;
}
.wenzi{
    width: 70%;
    height: 100%;
    float: left;
    box-sizing: border-box;
    padding-top:20rpx;
}
.img{
    width:30%;
    height: 100%;
    float: left
}
.catText01{
    font-size: 30rpx;
    color: #EE1919;
    font-weight: 600;
    margin-left: 20rpx;
    margin-bottom: 5rpx;
}
.catText02{
    margin-left: 10rpx;
    font-size: 36rpx;
    color: #222;
}
.catText03{
    display: block;
    font-size: 28rpx;
    margin-top:6rpx;
    color: #6f6f6f;
}


.list{
    margin-top: 320rpx;
    height: 160rpx;
}
scroll-view{
    width: 100%;
    height: 160rpx;
}
.listBox{
    height: 160rpx;
    width: 1080rpx;
}
.listBox view{
    width: 240rpx;
    height: 160rpx;
    float: left;
    margin-left: 20rpx;
    text-align: center;
}
.listBox view image{
    width: 100%;
    height: 100%;
}

.jifenTitle{
    display: block;
    margin-top: 30rpx;
    font-size: 30rpx;
    font-weight: 600;
    color: #fff;
}
.jifenCon{
    display: block;
    font-size: 26rpx;
    margin-top: 20rpx;
    color: #fff;
}
/*安全*/
#safety{
    width: 100%;
    height: 180rpx;
    margin-top: 20rpx;
}
#safety image{
    width: 100%;
    height: 100%
}
/*特色理财*/
#teseInvest{
    width:100%;
    height: 260rpx;
    margin-top: 20rpx;
    background: #fff;
}
#teseInvest .title{
    width: 100%;
    height: 60rpx;
    display: block;
    line-height: 60rpx;
    font-size: 26rpx;
    padding-left: 30rpx;
    color: #67645F;
    font-weight: 600;
    border-bottom: 2rpx solid #BFB9B2;
}
#teseInvest .invest{
    float: left;
    width: 140rpx;
    height: 140rpx;
    border: 2rpx solid #EE1919;
    border-radius: 50%;
    text-align: center;
    line-height: 140rpx;
    margin-top: 30rpx;
    margin-left: 20rpx;
    color: #7E766F;
    font-size: 50rpx;
    font-weight: 600;
}
#teseInvest .detail{
    float: left;
    width:300rpx;
    height:140rpx;
    margin-top: 30rpx;
    margin-left: 80rpx;
    box-sizing: border-box;
    padding-top: 20rpx;
    
}
 .detail text:nth-child(1){
    font-size: 28rpx;
    color: #7E766F;
 }
 .detail text:nth-child(2){
     font-size: 24rpx;
    border:2rpx solid #0EB10D;
    color: #0EB10D;
    margin-left: 20rpx;
 }
 .detail text:nth-child(3){
    display: inline-block;
    font-size: 30rpx;
    margin-top: 10rpx;
}
.detail text:nth-child(4){
    display: inline-block;
    font-size: 30rpx;
    margin-top: 10rpx;
    margin-left: 20rpx;
}
 
/*大家都在投*/
#hotInvest{
    width: 100%;
    margin-top: 20rpx;
    background: #fff;
}
.header{
    width: 100%;
    height: 64rpx;
    line-height: 64rpx;
    border-bottom: 2rpx solid #BFB9B2;
    padding-left: 30rpx;
}
.header .title{
    display: block;
    float: left;
    font-size: 26rpx;
    color: #67645F;
    font-weight: 600;
}
.header .num{
    display: block;
    font-size: 26rpx;
    color: #67645F;
    float: right;
    margin-right: 60rpx;
}
.project{
    width: 100%;
    height: 200rpx;
    border-bottom: 1rpx solid #BFB9B2;
    position: relative;
}
#hotInvest .project:last-child{
    border: 0;
}
.project .invest{
    width: 200rpx;
    height: 160rpx;
    position: absolute;
    left: 20rpx;
    top: 40rpx;
    text-align: center;
}
.project .invest text:nth-child(1){
    font-size: 58rpx;
    color: red;
    display: block;
}
.project .invest text:nth-child(2){

    font-size: 28rpx;
    color: #7E766F;
}
.project .typeName{
    width: 200rpx;
    height: 160rpx;
    position: absolute;
    left: 0;
    right: 0;
    margin: auto;
    top:20rpx;
    box-sizing: border-box;
    padding-top:20rpx;
    text-align: center;
    margin-top: 20rpx;
}
.typeName .title{
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
}
.typeName .title text{
    display: block;
    float: left;
    font-size: 28rpx;
    color: #7E766F;
}
.typeName .title i{
    display: block;
    float: right;
    font-size: 60rpx;
    color: #0EB10D;
}
.timesum{
    margin-top: 8rpx;
    color: #333;
    font-size: 26rpx;
    font-weight: 600;
}
.timesum text{
    display:inline-block;
}
.timesum text:nth-child(2){
    margin-left: 10rpx;
}

