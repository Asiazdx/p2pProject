.mainContainer{
    width: 100%;
    height: 100%;
}
.title{
    margin-top: 100rpx;
    width: 100%;
    height: 80rpx;
    color: #555;
    font-size: 36rpx;
    font-weight: 600;
    text-align: center;
    line-height: 80rpx;
}
.confirm{
    margin: 0 auto;
    margin-top: 30rpx;
    width: 90%;
}
.tag{
    width: 100%;
    height: 100rpx;
    border-bottom: 2rpx solid #00C3AA;
    margin-top: 20rpx;
}
.tag view{
    color: #666;
    font-size: 32rpx;
}
.tag view:nth-child(1){
    height: 100%;
    line-height: 100rpx;
    float: left;
}
.tag view:nth-child(2){
     height: 100%;
    line-height: 100rpx;
    float: right;
}
.btn{
    width: 80%;
    background: #00C3AA;
    color: #fff;
    font-size: 32rpx;
    margin-top: 50rpx;
}