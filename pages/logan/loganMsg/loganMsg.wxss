.swiper-tab{
    width: 100%;
    height: 90rpx;
    text-align: center;
    line-height: 80rpx;
    border: 2rpx solid #ccc;
    box-sizing: border-box;
    padding-left: 10rpx;
    padding-right: 10rpx;
}
.swiper-tab-item{
    display: inline-block;
    width: 24%;
    color:#666;
    font-size: 30rpx;
}
.swiper-tab-item i{
    font-size: 40rpx;
}
.active{
    color:#05B8FF;
    border-bottom: 4rpx solid #05B8FF;
}
/*提交基本信息*/
.msgform{
    display: block;
    width: 700rpx;
    height: 1000rpx;
    margin: 0 auto;
    margin-top: 60rpx;
    padding-top: 20rpx;
    box-sizing: border-box;
}
.select{
    width: 100%;
    height: 80rpx;
    border: 2rpx solid #ccc;
    text-align: center;
    line-height: 80rpx;
    box-shadow:0rpx 6rpx 6rpx #9f9f9f;
    color: #666;
    font-size: 32rpx;
    margin-top: 20rpx;
}
.tag{
    width: 100%;
    height: 100rpx;
    border: 2rpx solid #ccc;
    margin-top: 30rpx;
    line-height: 100rpx;
    box-sizing: border-box;
    padding-left: 20rpx;
}
.tag input{
    display: block;
    width: 70%;
    height: 100%;
    float: right;
}
.subMsg{
    width: 80%;
    height: 80rpx;
    color: #fff;
    font-size: 32rpx;
    text-align: center;
    line-height: 80rpx;
    background: #00C3AA;
    margin-top: 60rpx;
}
