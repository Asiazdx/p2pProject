/* pages/center/set/set.wxss */
page{
    background: #EBEBF1;
}
.head{
    width: 100%;
    height: 160rpx;
    border-top: 2rpx solid #ccc;
    background: #fff;
    padding-left: 30rpx;
    line-height: 160rpx;
    box-sizing: border-box;
    padding-right: 20rpx;
}
.toux{
    width: 100rpx;
    height: 100rpx;
    background: red;
    float: left;
    margin-right: 20rpx;
    margin-top: 30rpx;
}
.xinxi{
    width: 300rpx;
    height: 100rpx;
    float: left;
    margin-top: 30rpx;
}
.xinxi text:nth-child(1){
    display: block;
    width: 100rpx;
    height: 50rpx;
    line-height: 50rpx;
    margin-top: 0;
    text-align: center;
    font-size: 42rpx;
    color: #333;
}
.xinxi text:nth-child(2){
    display: block;
    height: 50rpx;
    margin-top: 10rpx;
    line-height: 50rpx;
    font-size: 30rpx;
    color: #AFA598;
}
.tubiao{
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    float: right;
    margin-top: 30rpx;
    text-align: right;
    color: #333;
}
.tubiao i{
    color: #333;
}
/*账号安全*/
.safe{
    width: 100%;
    height: 120rpx;
    margin-top: 20rpx;
    background: #fff;
    margin-bottom: 20rpx;
    padding-left: 30rpx;
    line-height: 120rpx;
    box-sizing: border-box;
    padding-right: 20rpx;
}
.safe text{
    color: #666;
    font-size: 36rpx;
    display: block;
    float: left;
}

