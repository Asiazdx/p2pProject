
<view class="tag">
    <i class="iconfont icon-shezhi" bindtap="shezhi"></i>
    <i class="iconfont icon-xinxi"></i>
</view>
<scroll-view scroll-y="true" id="mainContainer" >
        <view class="banner">
            <text>昨日收益（元）</text>
            <text>0.00</text>
            <view id="islook">
                <i class="iconfont icon-yanjing"></i>
            </view>
        </view>
        <view id="bar">
            <view>
              <text>总资产（元）</text>
              <text>0.00</text>
            </view>
            <view>
                <text>预期收益（元）</text>
                <text>0.00</text>
            </view>
            <view>
                <text>累计收益（元）</text>
                <text>0.00</text>
            </view>
        </view>
        <view class="space"></view>
        <view id="invest-ad">
            <text>预期年化</text><text>12%</text>
            <text>封闭期21天</text>
            <image src=""></image>
        </view>
        <view id="lists">
            <view id="list01" catchtap="selectMoney">
                <i class="iconfont icon-qianbao"></i>
                <text class="text01">我的资金</text>
                <text class="text02">查看账户金额</text>
            </view>
            <view id="list02">
                <i class="iconfont icon-43"></i>
                <text class="text01">我的卡券</text>
                <text class="text02">查看卡券</text>
            </view>
            <view id="list03" bindtap="investCenter">
                <i class="iconfont icon-zidongtoubiao"></i>
                <text class="text01">我的投资</text>
                <text class="text02">查看投资情况</text>
            </view>
            <view id="list04" bindtap="loganCenter">
                <i class="iconfont icon-jiekuan"></i>
                <text class="text01">我的借款</text>
                <text class="text02">查看借款情况</text>
            </view>
        </view>
        <!--安全保障-->
        <view id="safe">
            <view>
                <i class="iconfont icon-anquan"></i>
                <text class="text01">安全保障</text>
                <text class="text02">十年大品牌</text>
            </view>
            <view>
                <i class="iconfont icon-kefu"></i>
                <text class="text01">我的客服</text>
                <text class="text02">贴心小秘书</text>
            </view>
        </view>
        <!--footer-->
        <view id="footer">
            *预期收益非平台承诺收益，市场有风险，投资需谨慎。
        </view>
</scroll-view>