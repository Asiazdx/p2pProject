page{
    height: 100%;
}
.mainContainer{
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
/*遮罩层*/
.cover{
    position: absolute;
    bottom: -1400rpx;
    width: 100%;
    height: 100%;
    background: #000;
    display: flex;
    flex-direction: column;
    align-items: center;
    opacity: 0.6;
}
.title{
    width: 100%;
    height: 60rpx;
    font-size: 46rpx;
    font-weight: 600;
    color: #333;
    margin-top: 60rpx;
    padding-left: 20rpx;
}
.money{
    width: 100%;
    height: 120rpx;
    padding-left: 20rpx;
    margin-top: 20rpx;
}
.money text{
    display: block;
    line-height: 60rpx;
}
.money text:nth-child(1){
    font-size: 40rpx;
    color: #333;
}
.money text:nth-child(2){
    font-size: 28rpx;
    color: #B2A691;
}
.fangshi{
    width: 100%;
    height: 280rpx;
    margin-top: 40rpx;
    padding-left: 20rpx;
}

#zhifu{
    width: 90%;
    height: 100rpx;
    background: #05B8FF;
    margin: 0 auto;
    margin-top: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
}
/*使用优惠券*/
.jifen{
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
     color: #333;
}
.youhuiquan{
    display: block;
    float: left;
    font-weight: 600;
}
.jifen view{
    float: right;
    margin-right: 40rpx;
    font-size: 30rpx;
    color: #333;
    height: 100%;
    line-height: 60rpx;
}
.jifen i{
    font-size: 30rpx;
    color: #05B8FF;
}
/*银行卡支付*/
.bankCard{
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    margin-top: 60rpx;
    
}
.zhifufs{
    display: block;
    font-weight: 600;
    float: left;
}
.selectFangshi{
    float: right;
    font-size: 30rpx;
    color: #333;
    height: 100%;
     margin-right: 40rpx;
}
.selectFangshi i{
    color: #05B8FF;
}
/*支付方式弹出框*/
.zhifuTag{
    width: 100%;
    position: absolute;
    bottom: -800rpx;
    background: #fff;
}
.zhifuTag .zhifuTile{
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    padding-left: 20rpx;
    font-size: 40rpx;
    color: #333;
    margin-bottom: 40rpx;
}

.zhifuTag .zhifuTile i{
    display: block;
    float: left;
    width: 60rpx;
    line-height: 50rpx;
    text-align: center;
    height: 100%;
    font-size: 50rpx;
    color: #999;
}
.zhifuList{
    width: 90%;
    margin: 0 auto;
    margin-top: 20rpx;
    font-size: 32rpx;
    color: #333;
}
.zhifuList label{
    padding-right: 10rpx;
    display: block;
    width: 100%;
    height: 60rpx;
    text-align: right;
    /*border-bottom: 2rpx solid #B2A691;*/
    margin-bottom: 20rpx;
}
.active{
    bottom: 0;
}